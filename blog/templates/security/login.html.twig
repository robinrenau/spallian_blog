{% extends 'base.html.twig' %}

{% block title %}{{ parent() ~  "Log in!" }}{% endblock %}

{% block body %}
<form method="post" style="margin:100px">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h5 mb-3 font-weight-normal">Spallian Blog - Connexion </h1>

    <label for="inputEmail">Email</label>
    <input
        type="email"
        value="{{ lastUsername }}"
        name="email"
        id="inputEmail"
        class="form-control"
        required
        autofocus
    >

    <label for="inputPassword">Password</label>
    <input
        type="password"
        name="password"
        id="inputPassword"
        class="form-control"
        required
    >

    <input type="hidden" name="_csrf_token"
           value={{ csrf_token('authenticate') }}
    >

    <button style="margin-top:10px" class="btn btn-sm btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
